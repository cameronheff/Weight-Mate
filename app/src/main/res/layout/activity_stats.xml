<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsActivity">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="601dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/stats_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Profile Stats"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/CaloriesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stats_title"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/calories_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calories"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="600 Calories" />

            <TextView
                android:id="@+id/calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Recommended Daily Calories"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/CarbsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CaloriesLayout"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/carbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Recommended Daily Carbs"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/carbs_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carbs"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="600 Carbs" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/FatsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CarbsLayout"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/fats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Recommended Daily Fats"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fats_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fats"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="700 grams of Fat" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ProtienLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/FatsLayout"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/protiens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Recommended Daily Proteins"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/protiens_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/protiens"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="1,000,000 grams of Protien every day" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/GoalsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProtienLayout"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/goals_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Goals"
                android:textSize="18sp" />

<!--            <TextView-->
<!--                android:id="@+id/goals_value"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/goals"-->
<!--                android:layout_marginTop="0dp"-->
<!--                android:gravity="center"-->
<!--                android:text="" />-->
        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
